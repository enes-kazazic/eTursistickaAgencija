@{
    Layout = "Admin";
}

@model DestinacijaVM

    <script>
        $("#destinacije").addClass('active');
        $("#smjestaj").removeClass('active');
    </script>

<div class="col-md-10 banner-right">
    <!--start-booking-->
    <div class="booking">
        <div class="booking-main">
            <div class="booking-top">
                <div class="col-md-5 booking-top-left">
                    <div class="card-header">
                        <a href="/Smjestaj/Lista" style="cursor: pointer">
                            <h4 class="card-title">Destinacija</h4>
                        </a>
                        <p class="card-category">> Uredi</p>
                    </div>
                    <form asp-controller="Destinacija" asp-action="Uredi" method="post">
                        <div class="booking-form">
                            <div class="b_room">
                                <div class="booking_room">
                                    <div class="reservation">
                                        <ul>
                                            <input asp-for="Id" hidden />
                                            <li class="span1_of_1 left">
                                                <div class="book-text">
                                                    <h5>Grad: </h5>
                                                </div>
                                                <div class="book_date">
                                                    <input type="text" asp-for="Grad">
                                                </div>
                                                <div class="clearfix"></div>
                                            </li>
                                            <li class="span1_of_1 left">
                                                <div class="book-text">
                                                    <h5>Drzava: </h5>
                                                </div>
                                                <div class="book_date">
                                                    <input type="text" asp-for="Drzava">
                                                </div>
                                                <div class="clearfix"></div>
                                            </li>
                                            <li class="span1_of_1 left">
                                                <div class="book-text">
                                                    <h5>Smjestaj: </h5>
                                                </div>
                                                <div class="book_date">
                                                    <select asp-for="SmjestajID" asp-items="@Model.SmjestajStavke"></select>
                                                </div>
                                                <div class="clearfix"></div>
                                            </li>
                                            <li class="span1_of_1 left" style="float: right;">
                                                <input type="submit" value="Sacuvaj" class="btn btn-style btn-primary" />
                                            </li>
                                            <div class="clearfix"></div>
                                        </ul>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <!---->

                        </div>
                    </form>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>
    <!--end-booking-->
    <!--strat-date-piker-->
    <link rel="stylesheet" href="~/Template/css/jquery-ui.css" />
    <script src="~/Template/js/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker,#datepicker1").datepicker();
        });
    </script>
    <!--//End-date-piker-->
    <div class="footer">
        <p>Copyright &copy; 2015 Promenade. Design by <a href="http://w3layouts.com/"> W3layouts</a></p>
    </div>
</div>
<div class="clearfix"></div>

