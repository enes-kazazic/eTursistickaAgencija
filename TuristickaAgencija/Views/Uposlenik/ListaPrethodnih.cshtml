@{
    int counter = 0;
    Layout = "Uposlenik";
}



<script>
    $("#prethodni").addClass('active');
    $("#nadolazeci").removeClass('active');
</script>

@using TuristickaAgencija.ViewModels
@using TuristickaAgencija.ViewModels.Uposlenik
@model List<TuristickaAgencija.ViewModels.Uposlenik.UposlenikAranzmanListaVM>

<div class="col-md-10 banner-right">
    <!--start-booking-->
    <div class="booking">
        <div class="booking-main">
            <div class="booking-top">
                <div class="lista col-md-12">
                    <div class="card">
                        <div class="card-header ca  rd-header-primary">
                            <h4 class="card-title ">Prehodni aranžmani</h4>
                            <p class="card-category"> Lista aranžmana</p>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class=" text-primary">
                                        <tr>
                                            <th>
                                                ID
                                            </th>
                                            <th>
                                                Naziv
                                            </th>
                                            <th>
                                                Datum početka
                                            </th>
                                            <th>
                                                Datum Kraja
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (UposlenikAranzmanListaVM x in Model)
                                        {
                                            counter++;
                                            <tr>
                                                <td>
                                                    @counter
                                                </td>
                                                <td>
                                                    @x.Naziv
                                                </td>
                                                <td>
                                                    @x.DatumPocetka
                                                </td>
                                                <td>
                                                    @x.DatumKraja
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>

    <!--end-booking-->
    <!--strat-date-piker-->
    <link rel="stylesheet" href="~/Template/css/jquery-ui.css" />
    <script src="~/Template/js/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker,#datepicker1").datepicker();
        });
    </script>
    <!--//End-date-piker-->
    <div class="footer">
        <p>Copyright &copy; 2015 Promenade. Design by <a href="http://w3layouts.com/"> W3layouts</a></p>
    </div>
</div>
<div class="clearfix"></div>

