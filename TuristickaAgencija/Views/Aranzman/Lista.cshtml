@{
    int counter = 0;
    Layout = "Admin";
}



<script>
    $("#programi").addClass('active');
    $("#destinacije").removeClass('active');
    $("#smjestaj").removeClass('active');
</script>

@using TuristickaAgencija.ViewModels
@using TuristickaAgencija.ViewModels.Aranzman
@model List<TuristickaAgencija.ViewModels.Aranzman.AranzmanListaVm>

<div class="col-md-10 banner-right">
    <!--start-booking-->
    <div class="booking">
        <div class="booking-main">
            <div class="booking-top">
                <div class="lista col-md-12">
                    <div class="card">
                        <div class="card-header ca  rd-header-primary">
                            <h4 class="card-title ">Aranžmani</h4>
                            <p class="card-category"> Lista Aranžmana</p>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class=" text-primary">
                                    <tr>
                                        <th>
                                            ID
                                        </th> <th>
                                            Naziv
                                        </th>
                                        <th>
                                            Datum Pocetka
                                        </th>
                                        <th>
                                            Datum Kraja
                                        </th>
                                        <th>
                                            <a href="/Aranzman/Dodaj">
                                                <i class="material-icons">add</i>
                                            </a>
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (AranzmanListaVm x in Model)
                                    {
                                        counter++;
                                        <tr>
                                            <td>
                                                @counter
                                            </td>
                                            <td>
                                                @x.Naziv
                                            </td><td>
                                                @x.DatumPocetka
                                            </td>
                                            <td>
                                                @x.DatumKraja
                                            </td>
                                            <td>
                                                <a href="/Aranzman/Detalji?id=@x.Id" class="AranzmanListaDetalji">Detalji</a>
                                            </td>
                                            <td>
                                                <a href="/Aranzman/Uredi?aranzmanId=@x.Id" class="border_color">
                                                    <i class="material-icons">border_color</i>
                                                </a>
                                                <a href="/Aranzman/Obrisi?aranzmanId=@x.Id" class="delete">
                                                    <i class="material-icons">delete</i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @if (TempData["successDelete"] != null)
                        {
                            <div class="notification-bottom">
                                <p>Uspjesno obrisano</p>
                            </div>
                        }
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    
    @if (TempData["successMessage"] != null)
    {
        <div class="alert alert-success" style="text-align: center;">
            <strong>Uspješno!</strong> @TempData["successMessage"]
        </div>
    }
    else if (TempData["successEdit"] != null)
    {
        <div class="alert alert-success" style="text-align: center;">
            <strong>Uspješno!</strong> @TempData["successEdit"]
        </div>
    }

    <!--end-booking-->
    <!--strat-date-piker-->
    <link rel="stylesheet" href="~/Template/css/jquery-ui.css" />
    <script src="~/Template/js/jquery-ui.js"></script>
    <script>

        $(function () {
            $("#datepicker,#datepicker1").datepicker();

            setTimeout(function () {
                $(".notification-bottom").hide();
            }, 1000);

            setTimeout(function () {
                $(".alert").hide();
            }, 1000);
        });
    </script>
    <!--//End-date-piker-->
    <div class="footer">
        <p>Copyright &copy; 2015 Promenade. Design by <a href="http://w3layouts.com/"> W3layouts</a></p>
    </div>
</div>
<div class="clearfix"></div>

