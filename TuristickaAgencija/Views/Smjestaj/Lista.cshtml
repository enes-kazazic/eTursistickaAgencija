@{
    int counter = 0;
    Layout = "Admin";
}
@using TuristickaAgencija.ViewModels
@model List<TuristickaAgencija.ViewModels.SmjestajVM>

<div class="col-md-10 banner-right">
    <!--start-booking-->
    <div class="booking">
        <div class="booking-main">
            <div class="booking-top">
                <div class="lista col-md-12">
                    <div class="card">
                        <div class="card-header ca  rd-header-primary">
                            <h4 class="card-title ">Smještaj</h4>
                            <p class="card-category"> Lista Smještaja</p>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class=" text-primary">
                                    <tr>
                                        <th>
                                            ID
                                        </th>
                                        <th>
                                            Naziv
                                        </th>
                                        <th>
                                            Broj Ugovora
                                        </th>
                                        <th>
                                            Provizija po osobi
                                        </th>
                                        <th>
                                            <a href="/Smjestaj/dodaj">
                                                <i class="material-icons">add</i>
                                            </a>
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (SmjestajVM x in Model)
                                    {
                                        counter++;
                                        <tr>
                                            <td>
                                                @counter
                                            </td>
                                            <td>
                                                @x.Naziv
                                            </td>
                                            <td>
                                                @x.BrojUgovora
                                            </td>
                                            <td>
                                                @x.ProvizijaPoOsobi
                                            </td>
                                            <td>
                                                <a href="/Smjestaj/Uredi?SmjestajID=@x.Id" class="border_color">
                                                    <i class="material-icons">border_color</i>
                                                </a>
                                                <a href="/Smjestaj/Obrisi?SmjestajID=@x.Id" class="delete">
                                                    <i class="material-icons">delete</i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @if (TempData["successDelete"] != null)
                        {
                            <div class="notification-bottom">
                                <p>Uspjesno obrisano</p>
                            </div>
                        }
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>
    
    @if (TempData["successMessage"] != null)
    {
        <div class="alert alert-success" style="text-align: center;">
            <strong>Uspješno!</strong> @TempData["successMessage"]
        </div>
    }
    else if (TempData["successEdit"] != null)
    {
        <div class="alert alert-success" style="text-align: center;">
            <strong>Uspješno!</strong> @TempData["successEdit"]
        </div>
    }
    <!--end-booking-->
    <!--strat-date-piker-->
    <link rel="stylesheet" href="~/Template/css/jquery-ui.css" />
    <script src="~/Template/js/jquery-ui.js"></script>
    <script>
					$(function() {
                        $("#datepicker,#datepicker1").datepicker();

                        setTimeout(function () {
                            $(".notification-bottom").hide();
                        }, 1000);

                        setTimeout(function () {
                            $(".alert").hide();
                        }, 1000);
						});
    </script>
    <!--//End-date-piker-->
    <div class="footer">
        <p>Copyright &copy; 2015 Promenade. Design by <a href="http://w3layouts.com/"> W3layouts</a></p>
    </div>
</div>
<div class="clearfix"></div>

