@{
    Layout = null;
}



<script>
    $("#programi").addClass('active');
    $("#destinacije").removeClass('active');
    $("#smjestaj").removeClass('active');
</script>

@using TuristickaAgencija.ViewModels
@model DestinacijaAranzmanPrikazVM

                <div class="table-responsive" style="width: 95%; padding-top: 25px;margin: auto">
                    <table class="table table-hover">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    Naziv
                                </th>
                                <th>
                                    Smještaj
                                </th>
                                <th>
                                    Datum Pocetka
                                </th>
                                <th>
                                    Datum Kraja
                                </th>
                                <th>
                                    <a href="/DestinacijaAranzman/Dodaj?aranzmanId=@Model.Id">
                                        <i class="material-icons">add</i>
                                    </a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in @Model.Rows)
                            {
                                <tr>
                                    <td>
                                        @x.Naziv
                                    </td>
                                    <td>
                                        @x.Smjestaj
                                    </td>
                                    <td>
                                        @x.DatumPocetka
                                    </td>
                                    <td>
                                        @x.DatumKraja
                                    </td>
                                    <td>
                                        <a href="/DestinacijaAranzman/Uredi?destinacijaAranzmanId=@x.Id" class="border_color">
                                            <i class="material-icons">border_color</i>
                                        </a>
                                        <a href="/DestinacijaAranzman/Obrisi?id=@x.Id" class="delete">
                                            <i class="material-icons">delete</i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="clearfix"></div>
